# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Dialogflow Configuration
DIALOGFLOW_PROJECT_ID=whatsapp-bot-mckingstown-tyiw
# For local development: use JSON file path
GOOGLE_APPLICATION_CREDENTIALS=./config/dialogflow-service-account.json
# For cloud deployment (Render, Heroku): use Base64 encoded JSON
# GOOGLE_CREDENTIALS_BASE64=your_base64_encoded_service_account_json

# Google Sheets Configuration (Optional - for lead capture)
# Create a Google Sheet and get its ID from the URL
# URL format: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
# Leave empty to save leads to local JSON files instead
GOOGLE_SHEET_ID=

# Server Configuration
PORT=3000
NODE_ENV=development

# Development Mode - Set to 'true' to disable Twilio message sending (FREE testing)
# Bot will log responses to console instead of sending via WhatsApp
DEV_MODE=false

# Google Gemini AI (Optional) - used ONLY as a fallback for unknown messages
GEMINI_API_KEY=
ENABLE_GEMINI_FALLBACK=false
GEMINI_MODEL=gemini-2.5-flash
GEMINI_FALLBACK_MODELS=gemini-2.5-flash,gemini-2.5-pro
GEMINI_API_VERSIONS=v1,v1beta
GEMINI_TIMEOUT_MS=8000
GEMINI_MAX_OUTPUT_TOKENS=320
GEMINI_TEMPERATURE=0.2

# Optional: For production deployment
# WEBHOOK_URL=https://yourdomain.com/webhook/whatsapp
